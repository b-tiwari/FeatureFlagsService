{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": false,
    "rootDir": "server",
    "outDir": "build",
    "lib": [
      "esnext.asynciterable",
      "es6",
      "dom",
      "esnext"
    ]
  },
  "filesGlob": [
    "typings/index.d.ts",
    "server/**/*.ts",
    "node_modules/typescript/lib/lib.es6.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "typeRoots": [
    "node_modules/@types"
  ],
  "types": [
    "express",
    "morgan",
    "body-parser",
    "compression",
    "mongoose",
    "lodash"
  ]
}